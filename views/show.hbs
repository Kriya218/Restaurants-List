<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="#">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="logo">
        我的餐廳清單
      </a>
      <span class="d-flex flex-row align-items-center">        
        <a href="/restaurants/" class="card-link"><i class="fa-solid fa-house"></i> 返回首頁</a>
        <a href="/restaurants/{{restaurant.id}}/edit" class="card-link"><i class="fa-regular fa-pen-to-square fa-fw"></i> 編輯資訊</a>
        <span>
          <form id="deleteForm" action="/restaurants/{{restaurant.id}}?_method=DELETE" method="post">
            <button type="button" class="btn ms-3" style="color:#4592af;" data-bs-toggle="modal" data-bs-target="#delete_warning"> <i class="fa fa-minus" aria-hidden="true"></i> 移除餐廳</button>
          </form>
        </span>        
        <span>
      </span>      
    </div>
  </nav>
  <div class="banner"></div>

</header>

<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      {{> message}}
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100"
        src="{{restaurant.image}}" alt="{{restaurant.name}} image"
        style="max-width: 600px;">
    </div>
  </div>
</div>

{{> delete-warning}}

<script src="/javaScripts/delete-data-confirm.js"></script>